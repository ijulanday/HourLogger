<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/activity_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <TextView
            android:id="@+id/thing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new thing!"
            android:textSize="24sp"
            android:paddingLeft="12sp"
            app:layout_constraintLeft_toRightOf="parent"
            android:fontFamily="monospace"/>

        <TextView
            android:id="@+id/thing_description"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/thing_name"
            app:layout_constraintRight_toLeftOf="@+id/add_stuff"
            android:paddingRight="12sp"
            android:text="time"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="monospace"/>

        <EditText
            android:id="@+id/add_stuff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:paddingRight="12sp"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/thing_name"
            android:text="+ time"
            android:fontFamily="monospace"/>

    </TextView>






</android.support.constraint.ConstraintLayout>